-- in / not in 

SELECT * FROM books WHERE author_lname = 'Lahiri' or author_lname = 'Gaiman' or author_lname = 'Eggers'  ;
SELECT * FROM books WHERE author_lname in ('Lahiri' , 'Gaiman' ,'Eggers' ) ;
SELECT * FROM books WHERE author_lname not in ('Lahiri' , 'Gaiman' ,'Eggers' ) ;

SELECT * FROM books WHERE released_year in ('2002' , '2004' ,'2006' ) ;
SELECT * FROM books WHERE released_year >2000 and released_year %2 != 0 ; #Published after 2000 and even number
